<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="department_tile">
        <item name="android:fontFamily">@font/advent_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gallery_tile">
        <item name="android:fontFamily">@font/advent_pro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="artwork_tile" parent="gallery_tile">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="artwork_tile_title" parent="artwork_tile">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="directions_tile">
        <item name="android:fontFamily">@font/advent_pro</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="directions_tile_title" parent="directions_tile">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loading_bar">
        <item name="android:scaleX">3</item>
        <item name="android:scaleY">3</item>
    </style>

    <style name="warning_text">
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>